.Devise
  .Devise__left
    %h2.Devise__left-title Change YourNote
    = link_to "Back", :back, class: "Devise__left-link-text"
    = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "Devise__left-link-text"
    = button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "DeviseForm-submit"
  .Devise__right
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "DeviseForm" }) do |f|
      .DeviseForm-title MYSELF
      = render "devise/shared/error_messages", resource: resource
      .DeviseForm-field
        = f.label :username, class: "DeviseForm-text"
        %br/
        = f.text_field :username, autofocus: true, autocomplete: "username", class: "DeviseForm-input"
      .DeviseForm-field
        = f.label :email, class: "DeviseForm-text"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "DeviseForm-input"
      .actions
        = f.submit "Update", class: "DeviseForm-submit"

