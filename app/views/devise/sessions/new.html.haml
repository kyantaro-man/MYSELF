.Devise
  .Devise__left
    %h2.Devise__left-title Watch YourNote
    = render "devise/shared/links"
  .Devise__right
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "DeviseForm" }) do |f|
      .DeviseForm-title MYSELF
      .DeviseForm-field
        = f.label :email, class: "DeviseForm-text"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "DeviseForm-input"
      .DeviseForm-field
        = f.label :password, class: "DeviseForm-text"
        %br/
        = f.password_field :password, autocomplete: "current-password", class: "DeviseForm-input"
      - if devise_mapping.rememberable?
        .DeviseForm-field
          = f.check_box :remember_me
          = f.label :remember_me, class: "DeviseForm-text"
      .actions
        = f.submit "Log in", class: "DeviseForm-submit"
