= render partial: 'layouts/header'
.container
  = render partial: 'layouts/sidebar'
  .Main
    = form_with model: [@user, @introduction], html: {class: "IntroductionForm"}, local: true do |f|
      %h3.IntroductionForm__top 自己紹介文作成
      .IntroductionForm__middle
        = f.label :title, "タイトル", class: "IntroductionForm-label"
        = f.text_field :title, class: "IntroductionForm-input"
        = f.label :content, "自己紹介文", class: "IntroductionForm-label"
        = f.text_area :content, class: "IntroductionForm-textarea"
      .IntroductionForm__bottom
        = link_to "戻る", user_introductions_path, class: "IntroductionForm-btn"
        = f.submit "保存", class: "IntroductionForm-btn"